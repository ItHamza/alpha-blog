<h1 class="text-center mt-4">Categories</h1>

<div class="flickr_pagination">
  <%= will_paginate @category, :container => false %>
</div>

<div class="container">
  <% @categories.each do |category| %>
    <div class="row justify-content-center">
      <div class="col-md-4 mt-4">
        <div class="card text-center shadow mb-5">
          <div class="card-body">
          <h5 class="card-title"><%= link_to category.try(:name), category_path(category), class: "text-success" %></h5>
          <p class="card-text"><%= pluralize(category.articles.count, "Article") %></p>
          </div>
          <div class="card-footer text-muted">
          Created <%= time_ago_in_words(category.created_at) %> ago,
          Updated <%= time_ago_in_words(category.updated_at) %> ago
          </div>
        </div>
      </div>
    </div>
  <%end%>
</div>

<div class="flickr_pagination mb-4">
  <%= will_paginate @category, :container => false %>
</div>