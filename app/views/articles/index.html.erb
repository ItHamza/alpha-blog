<h1 class="text-center mt-4">Listing all Articles</h1>
<div class="container">
<% @articles.each do |article| %>
  <div class="row justify-content-center">
    <div class="col-md-8 mt-4">
        <div class="card text-center shadow mb-5">
          <div class="card-header font-italic">
          by Ameer Hamza
          </div>
          <div class="card-body">
          <h5 class="card-title"><%= link_to article.try(:title), article_path(article), class: "text-success" %></h5>
          <p class="card-text"><%= article.try(:description) %></p>
          <%= link_to 'Show', article_path(article), class: "btn btn-outline-success" %>
          <%= link_to 'Edit', edit_article_path(article), class: "btn btn-outline-info"  %>
          <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger" %>
          </div>
          <div class="card-footer text-muted">
          Created <%= time_ago_in_words(article.created_at) %> ago,
          Updated <%= time_ago_in_words(article.updated_at) %> ago
          </div>
        </div>
      </div>
    </div>
  <%end%>
</div>